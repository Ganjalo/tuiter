<% provide(:title, "Log in") %>

<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <small><%= link_to "Forgot password?", new_password_reset_path %></small>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, {:checked => true} %>
        <span>Remember me</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up", signup_path %>.</p>

    <small class="col-md-5">Or be the admin :<br/>
      Email: <strong>example@railstutorial.org</strong><br/>
      Password: <strong>password</strong>
    </small>

    <small class="col-md-5">Or use a random account :<br/>
      Email: <strong>example-<%= rand(0..6) %>@railstutorial.org</strong><br/>
      Password: <strong>password</strong>
    </small>
  </div>
</div>
